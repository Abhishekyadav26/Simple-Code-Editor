{
  "name": "simple-code-editor",
  "version": "1.0.0",
  "description": "code editor",
  "main": "build.js",
  "watch": ["build.js"],
  "ext": "js,json,html,css",
  "ignore": ["node_modules/*"],
  "exec": "electron .",
  "scripts": {
    "start": "electron .",
    "start-auto": "nodemon",
    "package": "electron-packager . MyElectronApp --platform=win32 --arch=x64 --out=dist",
    "build": "electron-builder"
  },
  "author": "Jit Debnath",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.3"
  },
  "build": {
    "appId": "com.NEO.Code-Editor",
    "productName": "Code-Editor",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "build.js",
      "package.json",
      "index.html",
      "style.css"
    ],
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.png"
    }
  }
}
