{
  "name": "simple-code-editor",
  "version": "1.0.0",
  "description": "code editor",
  "main": "main.js",
  "watch": "main.js",
  "ext": "js,json,html,css",
  "ignore": "node_modules/*",
  "exec": "electron .",
  "scripts": {
    "start": "electron .",
    "start-auto": "nodemon",
    "package": "electron-packager . MyElectronApp --platform=win32 --arch=x64 --out=dist",
    "build-x64": "electron-builder"
  },
  "author": "Jit Debnath",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.3"
  },
  "build-x64": {
    "appId": "com.NEO.OMEGA",
    "productName": "OMEGA",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "build.js",
      "package.json",
      "index.html",
      "style.css"
    ],
    "win": {
      "target": [{ "target": "msi" , "arch": ["x64"] }],
      "icon": "icon.png"
    }
  }
}
